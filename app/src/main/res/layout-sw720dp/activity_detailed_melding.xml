<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/locatiedetailedid"
                    android:layout_width="1200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Raadhuisstraat 123"
                    android:textColor="@android:color/white"
                    android:textSize="50sp" />

                <com.like.LikeButton
                    android:id="@+id/favorietenknopdetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1"
                    app:circle_end_color="#FF6FDA7F"
                    app:circle_start_color="#82b236"
                    app:icon_size="80dp"
                    app:icon_type="star" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/activityDetailedMelding_imgbtn_imageSmall_ID"
                    android:layout_width="306dp"
                    android:layout_height="350dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thumb1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_hoofdCategorieID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:text="Hoofdcategorie:"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_hoofdCategorie_detailedID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorBackground2"
                        android:fontFamily="sans-serif-condensed"
                        android:foreground="@drawable/imageborder"
                        android:paddingBottom="5px"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5px"
                        android:text="Afval"
                        android:textColor="@android:color/white"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_subCategorieID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Subcategorie:"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_subCategorie_detailedID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorBackground2"
                        android:fontFamily="sans-serif-condensed"
                        android:foreground="@drawable/imageborder"
                        android:paddingBottom="5px"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5px"
                        android:text="Straatafval"
                        android:textColor="@android:color/white"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_statusID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Status:"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_status_DetailedID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorBackground2"
                        android:fontFamily="sans-serif-condensed"
                        android:foreground="@drawable/imageborder"
                        android:paddingBottom="5px"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5px"
                        android:text="Afval wordt vandaag opgeruimd."
                        android:textColor="@android:color/white"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_laatstUpdateID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Laatste update:"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_laatsUpdate_detailedID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorBackground2"
                        android:fontFamily="sans-serif-condensed"
                        android:foreground="@drawable/imageborder"
                        android:paddingBottom="5px"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5px"
                        android:text="12 minuten geleden"
                        android:textColor="@android:color/white"
                        android:textSize="29sp" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/activityDetailedMelding_tv_beschrijvingID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="@string/beschrijving2"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activityDetailedMelding_tv_beschrijving_DetailedID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorBackground2"
                android:fontFamily="sans-serif-condensed"
                android:foreground="@drawable/imageborder"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5px"
                android:text="The wise man therefore always holds in these matters to this principle of selection: he rejects pleasures to secure other greater pleasures, or else he endures pains to avoid worse pains"
                android:textColor="@android:color/white"
                android:textSize="30sp" />


            <Button
                android:id="@+id/activityDetailedMelding_btn_terugBTN_ID"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FF6FDA7F"
                android:text="@string/terug"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="31sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- This initially-hidden ImageView will hold the expanded/zoomed version of
         the images above. Without transformations applied, it takes up the entire
         screen. To achieve the "zoom" animation, this view's bounds are animated
         from the bounds of the thumbnail button above, to its final laid-out
         bounds.
         -->

        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

    </FrameLayout>
</ScrollView>