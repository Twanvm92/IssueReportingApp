<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- This initially-hidden ImageView will hold the expanded/zoomed version of
         the images above. Without transformations applied, it takes up the entire
         screen. To achieve the "zoom" animation, this view's bounds are animated
         from the bounds of the thumbnail button above, to its final laid-out
         bounds.
         -->

        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="15dp">

                    <com.like.LikeButton
                        android:id="@+id/upvoteknopdetail"

                        android:layout_centerHorizontal="true"
                        app:circle_end_color="#FF6FDA7F"
                        app:circle_start_color="#82b236"
                        app:icon_size="35dp"
                        app:icon_type="thumb"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/upvoteknopdetail"
                        android:layout_centerInParent="true"
                        android:text="@string/activityDetailedMelding_bt_upvoten" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.like.LikeButton
                        android:id="@+id/favorietenknopdetail"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        app:circle_end_color="#FF6FDA7F"
                        app:circle_start_color="#82b236"
                        app:icon_size="35dp"
                        app:icon_type="star" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/favorietenknopdetail"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="@string/activityDetailedMelding_bt_follow" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/locatiedetailedid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                android:fontFamily="sans-serif-condensed"
                android:text="@string/locatieTab2"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/activityDetailedMelding_imgbtn_imageSmall_ID"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thumb1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_hoofdCategorieID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/hoofdcategorieTab2"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_hoofdCategorie_detailedID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorBackground2"
                        android:fontFamily="sans-serif-condensed"
                        android:foreground="@drawable/imageborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="Afval"
                        android:textColor="@android:color/white"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_subCategorieID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/subcategorieTab2"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activityDetailedMelding_tv_subCategorie_detailedID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorBackground2"
                        android:fontFamily="sans-serif-condensed"
                        android:foreground="@drawable/imageborder"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="Straatafval"
                        android:textColor="@android:color/white"
                        android:textSize="19sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/activityDetailedMelding_tv_beschrijvingID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/beschrijving2"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/child"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activityDetailedMelding_tv_beschrijving_DetailedID"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorBackground2"
                    android:fontFamily="sans-serif-condensed"
                    android:foreground="@drawable/imageborder"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="The wise man therefore always holds in these matters to this principle of selection: he rejects pleasures to secure other greater pleasures, or else he endures pains to avoid worse pains"
                    android:textColor="@android:color/white"
                    android:textSize="19sp" />
            </ScrollView>

            <TextView
                android:id="@+id/activityDetailedMelding_tv_statusID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/status"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activityDetailedMelding_tv_status_DetailedID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorBackground2"
                android:fontFamily="sans-serif-condensed"
                android:foreground="@drawable/imageborder"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Open/gesloten"
                android:textColor="@android:color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/activityDetailedMelding_tv_statusNotesID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/detailedStatus"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activityDetailedMelding_tv_status_DetailedNotesID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorBackground2"
                android:fontFamily="sans-serif-condensed"
                android:foreground="@drawable/imageborder"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Notes."
                android:textColor="@android:color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/activityDetailedMelding_tv_laatstUpdateID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/laatsteupdateTab2"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activityDetailedMelding_tv_laatsUpdate_detailedID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorBackground2"
                android:fontFamily="sans-serif-condensed"
                android:foreground="@drawable/imageborder"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="12 minuten geleden"
                android:textColor="@android:color/white"
                android:textSize="19sp" />

            <Button
                android:id="@+id/activityDetailedMelding_btn_terugBTN_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FF6FDA7F"
                android:text="@string/terug"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>
</ScrollView>