<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#669270">

    <ImageView
        android:id="@+id/meldingDialog_iv_imageSmall_ID"
        android:layout_width="177dp"
        android:layout_height="163dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/thumb1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


    <TextView
        android:id="@+id/meldingDialog_tv_locatie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/locatieTab2"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/meldingDialog_iv_imageSmall_ID"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/meldingDialog_iv_imageSmall_ID"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/meldingDialog_tv_locatieID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="5px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5px"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="@+id/meldingDialog_tv_locatie"
        app:layout_constraintRight_toRightOf="@+id/meldingDialog_tv_locatie"
        app:layout_constraintTop_toBottomOf="@+id/meldingDialog_tv_locatie" />

    <TextView
        android:id="@+id/meldingDialog_tv_laatstUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/laatsteupdateTab2"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/meldingDialog_tv_locatieID"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/meldingDialog_tv_locatieID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/meldingDialog_tv_locatieID" />

    <TextView
        android:id="@+id/meldingDialog_tv_laatstUpdateID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="5px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5px"
        android:text="2019-12-12"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/meldingDialog_tv_laatstUpdate"
        app:layout_constraintLeft_toRightOf="@+id/meldingDialog_iv_imageSmall_ID"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/meldingDialog_tv_beschrijving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beschrijving2"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/meldingDialog_iv_imageSmall_ID"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/meldingDialog_tv_beschrijvingID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="The wise man therefore always holds in these matters to this principle of selection: he rejects pleasures to secure other greater pleasures, or else he endures pains to avoid worse pains"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/meldingDialog_tv_beschrijving"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>