<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94b59c"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meldingDialog_iv_imageSmall_ID"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/thumb1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meldingDialog_tv_locatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/locatie"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meldingDialog_tv_locatieID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="5px"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5px"
                android:text="locatie"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/meldingDialog_tv_laatstUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/laatsteupdateTab2"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meldingDialog_tv_laatstUpdateID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="5px"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5px"
                android:text="2019-12-12"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/meldingDialog_tv_beschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="@string/beschrijving"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/meldingDialog_tv_beschrijvingID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="5px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5px"
        android:text="The wise man therefore always holds in these matters to this principle of selection: he rejects pleasures to secure other greater pleasures, or else he endures pains to avoid worse pains"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

</LinearLayout>