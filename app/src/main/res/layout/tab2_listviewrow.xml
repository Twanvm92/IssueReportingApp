<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground2"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="8dp"
    android:foreground="@drawable/imageborder"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/tab2fragment_ll_parentLayout">

    <TextView
        android:id="@+id/locatietab2tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/locatieTab2"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activitySRA_tv_locationID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="hwhqwdqdqwdqhqwdqdbwqbqwdbqiwqwdd"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/favorietenknopdetail"
        app:layout_constraintTop_toBottomOf="@+id/locatietab2tv" />

    <TextView
        android:id="@+id/hoofdcategorietab2tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/hoofdcategorieTab2"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/activitySRA_tv_locationID"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activitySRA_tv_hoofdCategorieID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-condensed"
        android:text="naamCategorie"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/favorietenknopdetail"
        app:layout_constraintTop_toBottomOf="@+id/hoofdcategorietab2tv" />

    <TextView
        android:id="@+id/subcategorietab2tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/subcategorieTab2"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activitySRA_tv_hoofdCategorieID" />

    <TextView
        android:id="@+id/activitySRA_tv_subCategorieID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-condensed"
        android:text="naamCategorie"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/favorietenknopdetail"
        app:layout_constraintTop_toBottomOf="@+id/subcategorietab2tv" />

    <TextView
        android:id="@+id/laatsteupdatetab2tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/laatsteupdateTab2"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activitySRA_tv_beschrijvingID" />

    <TextView
        android:id="@+id/numberOfUpvotesTab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/numberOfUpvotes"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/laatsteupdatetab2tv"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activitySRA_tv_laatstUpdateID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Tijd"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/laatsteupdatetab2tv"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/laatsteupdatetab2tv" />

    <TextView
        android:id="@+id/activitySRA_tv_upvoteText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"

        app:layout_constraintLeft_toRightOf="@+id/numberOfUpvotesTab2"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/numberOfUpvotesTab2"
        android:layout_marginBottom="0dp" />

    <com.like.LikeButton
        android:id="@+id/favorietenknopdetail_ListviewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:anim_scale_factor="1.5"
        app:circle_end_color="#FF6FDA7F"
        app:circle_start_color="#82b236"
        app:dots_primary_color="@color/colorBackground2"
        app:dots_secondary_color="@color/colorBackground2"
        app:icon_size="36dp"
        app:like_drawable="@drawable/ic_favorite_white_36dp"
        app:unlike_drawable="@drawable/ic_favorite_border_white_36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
         >

    </com.like.LikeButton>

    <ImageButton
        android:id="@+id/upvoteknopdetail_ListviewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file_upload_white_18dp"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/activitySRA_tv_upvoteText"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/activitySRA_tv_beschrijvingID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:text="wqwddqwqdwqdqqwdvwqqwidvqwqiwdyqiwvyivwqidqwyvdwqdyqwudyvqwudqwudqwudqwdwqdqwdd qwdwqwqdqwdqwdwqdqwqwddqwqddw"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/upvoteknopdetail_ListviewRow"
        app:layout_constraintTop_toBottomOf="@+id/activitySRA_tv_subCategorieID" />


</android.support.constraint.ConstraintLayout>